from scipy.stats import pearsonr

# Function to calculate correlation and p-value
def calculate_significance(df, z_columns, quantitative_columns, significance_level=0.05):
    significant_results = {}
    
    for z_col in z_columns:
        significant_results[z_col] = {}
        for q_col in quantitative_columns:
            if z_col != q_col:  # Avoid correlation of a variable with itself
                # Drop rows with NaN in either column to ensure same length
                valid_data = df[[q_col, z_col]].dropna()
                
                if len(valid_data) > 1:  # Ensure there are enough data points
                    corr, p_value = pearsonr(valid_data[q_col], valid_data[z_col])
                    
                    # Check if correlation is significant
                    if p_value < significance_level:
                        significant_results[z_col][q_col] = (corr, p_value)
    
    return significant_results

