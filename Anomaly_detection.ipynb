from sklearn.ensemble import IsolationForest

# Применим IsolationForest для поиска аномалий
isolation_forest = IsolationForest(contamination=0.25, random_state=42)
quantitative_data['Anomaly'] = isolation_forest.fit_predict(quantitative_data.drop('Cluster', axis=1))

# Добавим результаты PCA и аномалий в DataFrame
df_pca_3d['Anomaly'] = quantitative_data['Anomaly']
